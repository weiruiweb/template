}
.addCart image{
	transition:all 0.5s;
}
.nav_img{
	position:relative;

}
.cart_number{
	position:absolute;
	left:59%;
	top:3rpx;
	height:0rpx;
	z-index:1;
	width:1005;
}
.fiexd-cart{
	width:50rpx;
	height:50rpx;
	line-height: 50rpx;
	border-radius:50%;
	background:#21c3d4;
	margin:0rpx auto;
	text-align:center;
	z-index:3;
}
.jisster{
	transition:all 1s;
	transform:scale(0.5,0.5);
	animation:jisster 0.6s;
}
@keyframes jisster{
	0%{
		transform:rotate(3deg) scale(0.5,0.5);
	}
	20%{
		transform:rotate(-3deg) scale(0.5,0.5);
	}
	40%{
		transform:rotate(5deg) scale(0.6,0.6);
	}
	60%{
		transform:rotate(-5deg) scale(0.6,0.6);

	}
	80%{
		transform:rotate(3deg) scale(1.1,1.1);
	}
	100%{
		transform:rotate(-3deg) scale(1.1,1.1);
	}
}
 
