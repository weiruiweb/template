/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	overflow:hidden;
}
.input_list1{
	height:80rpx;
	margin-top:30rpx;
}
.input_list1 .input_before{
	width:22%;
}
.input_list1 input{
	width:76%;
	padding-left:2%;
	height:100%;
	border:solid 1px #e5e5e5;
}
.input{
	width:30%;
	height:240rpx;
	line-height:240rpx;
	border:solid 1px #e0e0e0;
	background:#f2f2f2;
	text-align: center;
}
.input image{
	width:80rpx;
	height:80rpx;
	margin:0 auto;
	
}
.submit_info{
	width:100%;
	height:80rpx;
	line-height:80rpx;
	position:fixed;
	left:0;
	bottom:0;
	border-radius:0;
	margin:0 auto;
}
.message_left{
	width:22%;
}
.message_right{
	width:78%;
	height:258rpx;
	border:solid 1px #e5e5e5;
}
.message_right textarea{
	width:94%;
	padding:2%;
	height:100%;
}
.message{
	margin-top:48rpx;
}
.message_upload{
	width:100%;
	height:190rpx;
}
.uplode_add{
	width:160rpx;
	height:190rpx;
	background:#ececec;
	text-align:center;
	line-height:190rpx;
	color:#ababab;
	font-size:60rpx;
	margin-right:20rpx;
}
.uolode_item{
	width:160rpx;
	height:190rpx;
	margin-right:20rpx;
}
.uolode_item image{
	width:100%;
	height:100%;
}