/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
.select{
	width:8.5%;
}
.select image{
	width:30rpx;
	height:30rpx;
}
.shopping_box{
	width:100%;
	height:152rpx;
}
.shopping_img{
	width:26%
}
.shopping_detail{
	width:65.5%;
	height:152rpx;
}
.shopping_img image{
	width:152rpx;
	height:152rpx;
}
.shopping_name{
	width:100%;
	height:33%;
}
.shopping_txt{
	width:100%;
	height:33.5%;
}
.shopping_number{
	width:100%;
	height:33.5%;
}
.shopping_price{
	width:60%;
	height:100%;
}
.number_handle{
	width:40%;
	height:100%;
	box-sizing:border-box;
	border:solid 1px #e0e0e0;
}
.number_handle .add{
	width:30%;
	height:100%;
	text-align:center;
	font-size:34rpx;
}
.number_handle .add_cont{
	width:40%;
	height:100%;
	border-left:solid 1px #e0e0e0;
	border-right:solid 1px #e0e0e0;
	text-align:center;
}