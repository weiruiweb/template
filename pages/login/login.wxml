<!--login.wxml-->
<view class="login">
  <view class="user_img">
    <open-data type="userAvatarUrl"></open-data>
  </view>
</view>
<view id="login">
  <view class="login_input flexRowBetween">
    <view class="input_img">
      <image src="/images/login2.png"></image>
    </view>
     <view class="input_in">
      <input placeholder="姓名"></input>
    </view>
  </view>
  <view class="login_input flexRowBetween">
    <view class="input_img">
      <image src="/images/login2.png"></image>
    </view>
     <view class="input_in" style="width:62%;">
      <input placeholder="验证码"></input>
    </view>
    <view class="submit_info code_in" style="width:28.5%;">获取验证码</view>
  </view>
</view>
<form bindsubmit="addOrder" report-submit="true">
  <button form-type="submit" class="submit_info" style="width:60%;margin:160rpx auto 0 auto;height:88rpx;line-height:88rpx;border-radius: 50rpx;">登录</button>
</form>
