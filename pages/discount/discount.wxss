/**index.wxss**/
@import "../../wxParse/wxParse.wxss"; 
.discount_card{
	height:134rpx;
}
.discount_card image{
	width:340rpx;
	height:134rpx;
}
.discont_box{
	width:48.5%;
	height:134rpx;
	position:relative;
}
.discont_cont{
	width:100%;
	height:134rpx;
	position:absolute;
	top:0;
	left:0;
}
.discont_left{
	width:45%;
	font-size:80rpx;
	text-align:center;
	color:#fff;
	font-weight:700;
}
.discont_right{
	width:55%;
	text-align:center;
}
.get_discount{
	width:140rpx;
	height:40rpx;
	border-radius:30rpx;
	background:#fffae3;
	text-align:center;
	line-height:40rpx;
	margin:10rpx auto;
}